@page "/Login/"
@layout NoAuthLayout

<div class="row d-flex align-items-center justify-content-center" style="height: 100vh; width: 100vw;">
    <div class="card d-flex align-items-center" style="width: 40vw;height: 50vh;">
        <div class="card-header d-flex" style="width: 100%;">
            <h1>Login</h1>
        </div>
        <div class="card-body d-flex align-items-center">
            <form>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" placeholder="Enter E-mail">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>



